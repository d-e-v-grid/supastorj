{
  // Конфигурация Claude Code для проекта Supastor
  
  // Модель AI для использования
  // Возможные значения: "claude-3-opus-20240229", "claude-3-sonnet-20240229", "claude-3-haiku-20240307", "claude-opus-4-20250514"
  "model": "claude-opus-4-20250514",
  
  // Максимальное количество токенов в ответе
  // Диапазон: 1-4096 для большинства моделей
  "maxTokens": 4096,
  
  // Температура генерации (креативность)
  // Диапазон: 0.0-1.0 (0 = детерминированный, 1 = максимально креативный)
  "temperature": 0.2,
  
  // Настройки контекста
  "context": {
    // Включать ли файл CLAUDE.md автоматически
    "includeClaudeMd": true,
    
    // Дополнительные файлы для включения в контекст
    "additionalFiles": [
      "docs/ARCHITECTURE.md",
      "README.md"
    ],
    
    // Максимальный размер контекста в токенах
    "maxContextTokens": 200000
  },
  
  // Настройки инструментов
  "tools": {
    // Разрешенные инструменты (пустой массив = все разрешены)
    "allowed": [],
    
    // Запрещенные инструменты
    "disabled": [],
    
    // Таймаут для bash команд в миллисекундах
    "bashTimeout": 120000,
    
    // Автоматически создавать todo-списки для сложных задач
    "autoTodo": true
  },
  
  // Настройки безопасности
  "security": {
    // Предупреждать о потенциально опасных операциях
    "warnOnDangerousOperations": true,
    
    // Блокировать выполнение деструктивных команд
    "blockDestructiveCommands": false,
    
    // Маскировать секреты в выводе
    "maskSecrets": true
  },
  
  // Настройки вывода
  "output": {
    // Стиль форматирования кода
    // Возможные значения: "prettier", "eslint", "custom"
    "codeStyle": "prettier",
    
    // Включать ли эмодзи в ответах
    "useEmoji": false,
    
    // Уровень детализации ответов
    // Возможные значения: "concise", "normal", "detailed"
    "verbosity": "concise"
  },
  
  // Настройки для конкретных команд
  "commands": {
    // Настройки для команды /init
    "init": {
      // Автоматически анализировать проект при инициализации
      "autoAnalyze": true
    },
    
    // Настройки для команды /commit
    "commit": {
      // Стиль сообщений коммитов
      // Возможные значения: "conventional", "simple", "detailed"
      "messageStyle": "conventional",
      
      // Включать ли подпись Claude в коммиты
      "includeSignature": true
    }
  },
  
  // MCP (Model Context Protocol) серверы
  "mcpServers": {},
  
  // Экспериментальные функции
  "experimental": {
    // Использовать расширенное мышление для сложных задач
    "extendedThinking": false,
    
    // Включить параллельное выполнение инструментов
    "parallelTools": true
  },
  
  // Пользовательские промпты
  "prompts": {
    // Дополнительные инструкции для модели
    "systemPrompt": "Всегда следуй архитектуре проекта Supastorj и используй TypeScript с strict mode. Приоритет - безопасность и производительность.",
    
    // Префикс для всех ответов
    "responsePrefix": "",
    
    // Суффикс для всех ответов
    "responseSuffix": ""
  }
}